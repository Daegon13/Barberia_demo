---
import "@styles/global.css";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import StickyCTA from "@components/StickyCTA.astro";
import barber from "@data/barber.json";

type Props = {
  title: string;
  description: string;
  canonicalPath?: string;
};

const { title, description, canonicalPath } = Astro.props;
const url = new URL(Astro.request.url);
const pathname = url.pathname;

const canonical = canonicalPath
  ? new URL(canonicalPath, url.origin).toString()
  : new URL(pathname, url.origin).toString();

const ogTitle = title;
const ogDesc = description;
const ogImage = "/img/og-cover.png";
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />

    <title>{title}</title>

    <meta property="og:type" content="website" />
    <meta property="og:title" content={ogTitle} />
    <meta property="og:description" content={ogDesc} />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={ogImage} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="theme-color" content="#07090B" />

    <!-- Fonts: Inter/Manrope via system fallback (si querés, luego las cargás desde @fontsource o self-host) -->
  </head>

  <body class="text-zinc-100">
    <div class="fixed inset-0 texture" aria-hidden="true"></div>

    <Header currentPath={pathname} brand={barber.nombre} whatsapp={barber.whatsapp} />

    <main class="mx-auto w-full max-w-6xl px-4 sm:px-6 lg:px-8 pt-24 pb-24">
      <slot />
    </main>

    <Footer brand={barber.nombre} city={barber.ciudad} address={barber.direccion} />

    <StickyCTA brand={barber.nombre} whatsapp={barber.whatsapp} />
  </body>
</html>
