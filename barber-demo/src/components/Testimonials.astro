---
const { items } = Astro.props;
const stars = (n) => "★★★★★☆☆☆☆☆".slice(5 - n, 10 - n);
---
<div class="grid md:grid-cols-3 gap-4">
  {items.map((t) => (
    <figure class="rounded-2xl border border-white/10 bg-white/5 p-5">
      <div class="text-sm text-zinc-300">{stars(t.rating)}</div>
      <blockquote class="mt-3 text-sm text-zinc-200 leading-relaxed">
        “{t.texto}”
      </blockquote>
      <figcaption class="mt-4 text-sm text-zinc-400">— {t.nombre}</figcaption>
    </figure>
  ))}
</div>
