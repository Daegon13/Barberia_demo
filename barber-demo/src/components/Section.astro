---
const { title, subtitle } = Astro.props;
---
<section class="py-10">
  <div class="flex flex-col gap-2 mb-6">
    <h2 class="text-xl sm:text-2xl font-semibold tracking-tight text-zinc-50">{title}</h2>
    {subtitle && <p class="text-sm text-zinc-400 max-w-2xl">{subtitle}</p>}
  </div>
  <slot />
</section>
