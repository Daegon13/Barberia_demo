---
import BaseLayout from "../layouts/BaseLayout.astro";
import barber from "../data/barber.json";
import type { BarberData, Servicio } from "../lib/types";
import ServiceCard from "../components/ServiceCard.astro";
import BarbersSection from "../components/BarbersSection.astro";

const data = barber as unknown as BarberData;
const servicios = (data.servicios ?? []) as Servicio[];

const title = `Servicios y precios — ${data.nombre}`;
const description = "Cards claras con duración, precio y CTA directo. Reservá por WhatsApp.";
---

<BaseLayout title={title} description={description}>
  <section class="py-10">
    <h1 class="text-2xl font-semibold text-zinc-50">Servicios</h1>
    <p class="mt-2 text-sm text-zinc-400">Cards claras con duración, precio y CTA directo.</p>

    <div class="mt-8 grid gap-4 lg:grid-cols-2">
      {servicios.map((s) => (
        <ServiceCard s={s} />
      ))}
    </div>

    <BarbersSection />
  </section>
</BaseLayout>
