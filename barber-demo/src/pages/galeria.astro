---
import BaseLayout from "@layouts/BaseLayout.astro";
import Section from "@components/Section.astro";
import barber from "@data/barber.json";

const title = `Trabajos — ${barber.nombre}`;
const description = "Galería antes y después (placeholders) para demo convincente.";
---
<BaseLayout title={title} description={description}>
  <Section
    title="Galería"
    subtitle="Antes y después (mock). En producción esto se conecta a fotos reales."
  >
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
      {barber.galeria.map((g) => (
        <article class="rounded-2xl border border-white/10 bg-white/5 overflow-hidden shadow-soft">
          <div class="grid grid-cols-2">
            <img src={g.before} alt={`Antes: ${g.titulo}`} loading="lazy" class="w-full h-40 object-cover opacity-90" />
            <img src={g.after} alt={`Después: ${g.titulo}`} loading="lazy" class="w-full h-40 object-cover" />
          </div>
          <div class="p-4">
            <div class="font-semibold text-zinc-100">{g.titulo}</div>
            <div class="mt-1 text-sm text-zinc-400">Resultado limpio, sin clichés visuales.</div>
            <div class="mt-3">
              <a href="/turnos" class="inline-flex rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm font-semibold text-zinc-100 hover:bg-white/10 transition">
                Reservar
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>
  </Section>
</BaseLayout>
