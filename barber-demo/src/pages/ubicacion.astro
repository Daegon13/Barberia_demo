---
import BaseLayout from "@layouts/BaseLayout.astro";
import Section from "@components/Section.astro";
import barber from "@data/barber.json";

const title = `Ubicación — ${barber.nombre}`;
const description = `Dirección, horarios y cómo llegar. ${barber.ciudad}.`;
---
<BaseLayout title={title} description={description}>
  <Section title="Ubicación" subtitle="Dirección clara + bloque de mapa (placeholder) para demo.">
    <div class="grid lg:grid-cols-2 gap-4">
      <div class="rounded-2xl border border-white/10 bg-white/5 p-5 shadow-soft">
        <div class="text-sm text-zinc-400">Dirección</div>
        <div class="mt-1 text-lg font-semibold text-zinc-50">{barber.direccion}</div>
        <div class="mt-3 text-sm text-zinc-400">{barber.ciudad}</div>

        <div class="mt-6 text-sm font-semibold text-zinc-200">Horarios</div>
        <div class="mt-2 rounded-xl border border-white/10 bg-ink-900/40 p-4">
          <div class="text-sm text-zinc-200">
            {barber.horarios.dias.join(" · ")}
          </div>
          <div class="mt-2 text-sm text-zinc-400">
            {barber.horarios.abre} — {barber.horarios.cierra}
          </div>
          <div class="mt-2 text-xs text-zinc-500">{barber.horarios.nota}</div>
        </div>

        <div class="mt-6 text-sm font-semibold text-zinc-200">Cómo llegar</div>
        <ul class="mt-2 text-sm text-zinc-400 grid gap-2">
          <li>— Referencia: zona céntrica, fácil acceso.</li>
          <li>— Estacionamiento cercano (mock).</li>
          <li>— Si venís justo, avisá por WhatsApp.</li>
        </ul>
      </div>

      <div class="rounded-2xl border border-white/10 bg-white/5 p-5 shadow-soft">
        <div class="text-sm font-semibold text-zinc-200">Mapa (placeholder)</div>
        <div class="mt-3 rounded-2xl border border-white/10 bg-ink-900/40 h-80 flex items-center justify-center">
          <div class="text-sm text-zinc-500">Aquí va un embed de Google Maps en producción</div>
        </div>
        <div class="mt-4 text-xs text-zinc-500">
          Performance tip: embed diferido (lazy) para no afectar LCP.
        </div>
      </div>
    </div>
  </Section>
</BaseLayout>
